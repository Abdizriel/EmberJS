<div class="container text-center">
    <h1>Contact</h1>
    <p>Do you have any questions for me?</p>

    <div class="form-group form-group-lg row">

        {{#if response}}
          <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-6 col-md-offset-3 margin-bottom-20">
            <strong>{{ response.headline }}</strong> {{ response.message }}
          </div>
        {{/if}}

        {{validated-input beenFocused=emailAddressFocused value=emailAddress valid=isValidEmail placeholder="Please type your e-mail address." type="email" input-class="form-control input-flat"}}
        {{validated-input beenFocused=messageTitleFocused value=messageTitle valid=isValidTitle placeholder="Please type your title. (At least 5 characters.)" type="text" input-class="form-control input-flat"}}
        {{validated-textarea beenFocused=messageTextFocused value=messageText valid=isValidMessage placeholder="Please type your message. (At least 25 characters.)" type="text" input-class="form-control textarea-flat"}}

        <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-6 col-md-offset-3">
            <button class="btn btn-flat btn-carrot btn-lg btn-block"  {{action 'sentMessage'}} disabled={{isDisabled}}>Send Message</button>
        </div>
    </div>
</div>