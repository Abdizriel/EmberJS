<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-6 col-md-offset-3 margin-bottom-20 has-feedback {{if hasError 'has-error'}}">
  {{textarea
      type=type
      value=value
      size=size
      pattern=pattern
      name=name
      placeholder=placeholder
      disaled=disabled
      maxlength=maxlength
      tabindex=tabindex
      class=input-class
      autofocus=autofocus
  }}
  {{#if hasError}}
    {{fa-icon "fa-times" class="form-control-feedback"}}
  {{/if}}
</div>